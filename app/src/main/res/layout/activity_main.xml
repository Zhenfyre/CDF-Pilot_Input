<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flint_cdf.pilot.cdf_pilot_input.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp"
            android:padding="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/page_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/date_of_collection"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/collectionDate"
                    android:textSize="20sp"
                    android:hint="@string/mm_dd_yyyy"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/time_of_collection"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_of_day"
                    android:textSize="20sp"
                    android:hint="@string/hh_mm_am_pm"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/tablet_number"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablet_number"
                    android:textSize="20sp"
                    android:hint="@string/defaultTabletNumber"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/time_running"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:id="@+id/time_running_water"
            android:hint="@string/default_time"
            android:textSize="20sp"
            android:textColor="#575757"
            android:layout_marginStart="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:text="@string/temperature"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/cold_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cold"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="24dp"/>

            <RadioButton
                android:id="@+id/cool_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cool"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>

            <RadioButton
                android:id="@+id/tepid_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tepid"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>

            <RadioButton
                android:id="@+id/warm_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/warm"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>

            <RadioButton
                android:id="@+id/hot_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hot"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>

            <RadioButton
                android:id="@+id/scalding_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scalding"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/normal_use"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#575757"
            android:gravity="center_horizontal"
            >

            <CheckBox
                android:id="@+id/checkBoxDrinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#575757"
                android:text="@string/drinking"
                />

            <CheckBox
                android:id="@+id/checkBoxBrushingTeeth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"
                android:text="@string/brushing_teeth"
                android:layout_toEndOf="@id/checkBoxDrinking"
                />

            <CheckBox
                android:id="@+id/checkBoxHandwashing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"
                android:text="@string/handwashing"
                android:layout_toEndOf="@id/checkBoxBrushingTeeth"
                />

            <CheckBox
                android:id="@+id/checkBoxNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"
                android:text="@string/none"
                android:layout_toEndOf="@id/checkBoxHandwashing"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/water_appearance"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/water_appearance_description"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:hint="@string/water_color_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/water_smell"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/water_smell_description"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:hint="@string/water_smell_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/water_taste"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/water_taste_description"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:hint="@string/water_taste_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:text="@string/rottenEgg_smell" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <RadioButton
                android:id="@+id/rottenEgg_no_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
            <RadioButton
                android:id="@+id/rottenEgg_yes_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:text="@string/sediment"
            android:layout_marginTop="24dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <RadioButton
                android:id="@+id/sediment_no_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
            <RadioButton
                android:id="@+id/sediment_yes_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:text="@string/feathery"
            android:layout_marginTop="24dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <RadioButton
                android:id="@+id/feathery_no_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
            <RadioButton
                android:id="@+id/feathery_yes_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_marginStart="8dp"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/testStripSectionTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/total_hardness"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_hardness"
                    android:textSize="20sp"
                    android:hint="@string/enter_ppm"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/total_chlorine"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_chlorine"
                    android:textSize="20sp"
                    android:hint="@string/enter_ppm"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/alkalinity"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_alkalinity"
                    android:textSize="20sp"
                    android:hint="@string/enter_ppm"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:text="@string/copper" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_copper"
                    android:textSize="20sp"
                    android:hint="@string/enter_ppm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:text="@string/iron" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_iron"
                    android:textSize="20sp"
                    android:hint="@string/enter_ppm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="@string/ph"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_pH"
                    android:textSize="20sp"
                    android:hint="@string/enter_pH"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="@string/bacteria" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/negative_bacteria_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                    <RadioButton
                        android:id="@+id/positive_bacteria_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positive"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="@string/pesticide" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/negative_pesticide_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                    <RadioButton
                        android:id="@+id/positive_pesticide_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positive"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="@string/lead" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/negative_lead_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/negative"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                    <RadioButton
                        android:id="@+id/positive_lead_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positive"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/nitrite"
                    android:textColor="@color/black"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/safe_nitrite_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safe"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                    <RadioButton
                        android:id="@+id/unsafe_nitrite_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unsafe"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/nitrate"
                    android:textColor="@color/black"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/safe_nitrate_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safe"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                    <RadioButton
                        android:id="@+id/unsafe_nitrate_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unsafe"
                        android:textSize="20sp"
                        android:textColor="#575757"
                        android:layout_marginStart="24dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="48dp"
            android:id="@+id/summary"
            android:text="@string/summary"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="48dp"
            android:padding="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/submit"
            android:onClick="submitResults"/>

    </LinearLayout>

</ScrollView>